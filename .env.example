# SpectraView SDK Environment Variables
# Copy this file to .env and configure with your values

# API Configuration
# Option 1: Use full API endpoint (legacy)
SPECTRAVIEW_API_URL=http://localhost:3001/api

# Option 2: Use base URL (recommended)
# The SDK will append /api automatically
SPECTRAVIEW_BASE_URL=http://localhost:3001

# Authentication
SPECTRAVIEW_API_KEY=your-api-key-here

# Application ID
SPECTRAVIEW_APP_ID=my-app

# Development settings
SPECTRAVIEW_DEBUG=true

# Optional: Default user ID (for testing)
SPECTRAVIEW_USER_ID=test-user-001